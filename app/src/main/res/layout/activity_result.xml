<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEFCE"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/imprima"
        android:text="Resultado"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSalarioBruto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallet" />

    <TextView
        android:id="@+id/txtSalarioBruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="Salário Bruto"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtINSS"
        app:layout_constraintEnd_toStartOf="@+id/txtResultSalario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtINSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="INSS"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtIRRF"
        app:layout_constraintEnd_toStartOf="@+id/txtNumINSS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtIRRF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="IRRF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtOtrDescontos"
        app:layout_constraintEnd_toStartOf="@+id/txtNumIRRF"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtOtrDescontos"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/imprima"
        android:text="Outros Descontos"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSalarioLiquido"
        app:layout_constraintEnd_toStartOf="@+id/txtNumDescontResult"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtResultSalario"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNumINSS"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtNumINSS"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#BA0C0C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNumIRRF"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtNumDescontResult"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/imprima"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#BA0C0C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSalarioLiquidoResult2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtNumIRRF"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#BA0C0C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNumDescontResult"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtSalarioLiquido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="Salário Líquido"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescontos"
        app:layout_constraintEnd_toStartOf="@+id/txtSalarioLiquidoResult2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtSalarioLiquidoResult2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/imprima"
        android:text="0,00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescontoResult"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtDescontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/imprima"
        android:text="Descontos (%)"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar"
        app:layout_constraintEnd_toStartOf="@+id/txtDescontoResult"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtDescontoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/imprima"
        android:text="0,00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_marginBottom="44dp"
        android:background="#8EA95B"
        android:backgroundTint="#8EA95B"
        android:fontFamily="@font/imprima"
        android:text="Voltar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>